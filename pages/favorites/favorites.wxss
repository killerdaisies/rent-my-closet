/* pages/favorites/favorites.wxss */
.page-container {
  height: 40px;
  padding: 10px;
  border-radius: 50px;
}

.search-bar{
  height: 28px;
  width: 290px;
  font-size: 16px;
  /* text-shadow: 0 1px 3px rgba(0,0,0,0.6); */
  background-color: #F5F3F3;
  opacity: 0.7;
  border-radius: 5px; 
  padding: 3px 0px 0px 30px;
  margin-bottom: 5px;
  /* margin: 0px 0px 0px 20px; */
}

.search-container {
  padding: 12px 0px 7px 12px;
  border-bottom: 1px solid lightgrey;
  display: flex;
  flex-direction: row;
  position: relative;
}

.search {
  position: absolute;
  left: 5%;
  bottom: 30%; 
  height: 16px;
  width: 16px;
}

.card-wrapper {
  height: 320rpx;
  position: relative;
  top: 6px;
  display: flex;
  width: 97%;
  padding: 4px;
  background-color: white;
  /* border-radius: 0px 0px 1px 0px; */
  /* margin: 0 2% 0 1%; */
  border-bottom:0.1px solid #E5E5E5;
}
.card {
  background-size: cover !important;
  background-position: bottom bottom;
  object-fit: contain;
  color: white;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  width:40%;
  height:100%;
  border-radius: 6px;
}
.card-user {
  position: relative;
  right: 100rpx;
  top: 10px;
  width: 40px;
  border-radius: 50%;
}
.card-category {
  position: relative;
  top: 45rpx;
  left: 60rpx;
  font-weight: 300;
  color: grey;
  opacity: 0.8;
  font-size: 12px;
  text-transform: uppercase;
}
.card-mainInfo {
  position: absolute;
  bottom: 10px;
  left: 10px;
}
.card-mainInfo .name {
  font-size: 20px;
  font-family: Arial;
  font-weight: 540;
  /* border: 1px solid green; */
  position: relative;
  left: 320rpx;
  width: 100%;
  bottom: 180rpx;
}
.card-mainInfo .price {
  font-size: 18px;
  position: relative;
  left: 320rpx;
  top: 40rpx;
  color: red;
  opacity: 0.7;
  /* font-weight: light; */
} 
.card-mainInfo .a-day {
  font-size: 11px;
  position: relative;
  left: 480rpx;
  top: 4rpx;
  color: black;
  opacity: 0.9;
  font-weight: lighter;
} 
.slide-image {
  width: 100%;
  height: 50rpx;
}

.swiper {
  height: 220rpx;
}

.my-favourites{
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: relative;
  /* left: 55px; */
  text-align: center;
  padding-bottom: 8px;
  border-bottom: 1px solid #E5E5E5;
  font-size: 30px;
  background-color:rgba(229,229,229,0.1);
  width: 100%;
}


.heart-1{
  height: 50rpx;
  width: 50rpx;
  position: relative;
  left: 25px;
}

.heart-2{
  height: 50rpx;
  width: 50rpx;
  position: relative;
  right: 25px;
}