/* Cards */
.page-container{
  background-color: #F5F3F3;
}
.card-wrapper {
  height: 320px;
  position: relative;
  left: 3px;
  top: 6px;
  display: inline-block;
  width: 46%;
  padding-bottom: 12px;
  background-color: white;
  border-radius: 8px 8px 10px 10px;
  margin: 0 2% 0 1%;
}
.card {
  background-size: cover !important;
  background-position: center;
  color: white;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  width:100%;
  height:80%;
  border-radius: 3px 3px 0px 0px;
}
.card-user {
  position: absolute;
  right: 10px;
  top: 10px;
  width: 40px;
  border-radius: 50%;
}
.card-category {
  position: absolute;
  top: 10px;
  left: 10px;
  font-size: 15px;
  text-transform: uppercase;
}
.card-mainInfo {
  position: absolute;
  bottom: 10px;
  left: 10px;
}
.card-mainInfo .name {
  font-size: 18px;
}
.card-mainInfo .price {
  font-size: 14px;
  color: red;
  opacity: 0.7;
  /* font-weight: light; */
} 
.card-mainInfo .a-day {
  font-size: 11px;
  color: black;
  opacity: 0.9;
  font-weight: lighter;
} 
.banner {
  border:solid red;
}
.search-bar{
  height: 28px;
  width: 290px;
  font-size: 16px;
  /* text-shadow: 0 1px 3px rgba(0,0,0,0.6); */
  background-color: #F5F3F3;
  opacity: 0.7;
  border-radius: 5px; 
  padding: 3px 0px 0px 30px;
  /* margin: 0px 0px 0px 20px; */
}

.search-container {
  padding: 0px 0px 7px 12px;
  border-bottom: 1px solid lightgrey;
  display: flex;
  flex-direction: row;
  position: relative;
}

.search {
  position: absolute;
  left: 5%;
  bottom: 40%; 
  height: 16px;
  width: 16px;
}
