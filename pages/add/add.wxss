/* pages/add/add.wxss */
.h2-header {
 color: black;
  font-size: 50rpx;
  font-weight: bold;
  padding: 10px;
}
/* Avatar */
.userinfo-avatar {
  width: 430px;
  height: 410px;
}

/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}
.input-height {
  height: 10em;
}
.input-label {
  font-size: 35rpx;
}
textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  width: 100%;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  border-radius: 2px;
  border-left: 5px solid #9F9F9C;
}

.add-avatar {
  background-color: grey;
  height: 250px;
}

.add-button {
  background-color: white;
  color: grey;
  padding: 5px 15px;
  border: solid 1px;
  border-radius: 50px;
  opacity: .9;
  left: 28%;
  top: 40%;
  position: relative;
  width: 38%;
}

.camera {
  width: 20px;
  height: 20px;
  top: 3px;
  left: 5px;
  position: relative;
}

