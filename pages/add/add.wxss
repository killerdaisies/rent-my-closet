/* pages/add/add.wxss */
.h2-header {
 color: black;
  font-size: 50rpx;
  font-weight: bold;
  padding: 10px;
}
/* Avatar */
.userinfo-avatar {
  width: 430px;
  height: 410px;
}

/* form style */
.user-input {
  width: 100%;
  margin-bottom: 35rpx;
}
.input-height {
  height: 10em;
}
.input-label {
  font-size: 35rpx;
}
.textarea {
  padding: 10rpx 0;
  font-size: 35rpx;
  font-color: grey;
  width: 100%;
}
.text-area-wrap {
  padding: 15rpx 15rpx;
  background-color: #fff;
  margin-top:8px;
  left: 4px;
  right: 4px;
  border-radius: 1px;
  /*border-bottom: dotted grey;*/
  position: relative;
}


.text-area-wrap{
  position: relative;
  font-size: 20px;
  color: grey;
  text-shadow: 0 1px 3px rgba(0,0,0,0.6);
  background-color: #F5F3F3;
  opacity: 0.7;
  margin: 2px 5px 5px 5px;
  height: 32px;
  border-radius: 5px;
}

.add-avatar {
  width: 100%;
  background-color: grey;
  height: 250px;
}

.add-button {
  background-color: white;
  color: grey;
  padding: 5px 15px;
  border: solid 1px;
  border-radius: 50px;
  opacity: .9;
  top: 40%;
  position: relative;
  width: 50%;
}

.camera {
  width: 20px;
  height: 20px;
  top: 3px;
  left: 5px;
  position: relative;
}


